name: Compile Examples

on:
  pull_request:
    paths:
      - ".github/workflows/compile-examples.yml"
      - "examples/**"
      - "src/**"
  push:
    paths:
      - ".github/workflows/compile-examples.yml"
      - "examples/**"
      - "src/**"

jobs:
  build:
    runs-on: ubuntu-latest

    env:
      {{ jobs["build"]["env"]|indent(width=6) }}

    strategy:
      fail-fast: false

      matrix:
        {{ jobs["build"]["strategy"]["matrix"]|indent(width=8) }}

    steps:
      - name: Checkout
        uses: actions/checkout@v2

      - name: Compile examples
        uses: arduino/actions/libraries/compile-examples@master
        with:
          fqbn: {{ "${{" }} matrix.board.fqbn {{ "}}" }}
{%- if jobs["build"]["steps"]["compile-examples"]["with"]["platforms"] is defined %}
          platforms: |
            {{ jobs["build"]["steps"]["compile-examples"]["with"]["platforms"]|indent(width=12) }}
{%- endif %}
{%- if jobs["build"]["steps"]["compile-examples"]["with"]["libraries"] is defined %}
          libraries: |
            {{ jobs["build"]["steps"]["compile-examples"]["with"]["libraries"]|indent(width=12) }}
{%- endif %}
{%- if jobs["build"]["steps"]["compile-examples"]["with"]["sketch-paths"] is defined %}
          sketch-paths: {{ jobs["build"]["steps"]["compile-examples"]["with"]["sketch-paths"] }}
{%- endif %}
          size-report-sketch: {{ jobs["build"]["steps"]["compile-examples"]["with"]["size-report-sketch"] }}
          enable-size-deltas-report: 'true'

{%- if jobs["build"]["steps"]["report-size-trends"] is defined %}
      - name: Write data to size trends report spreadsheet
        # Update report on every push to the master branch
        if: github.event_name == 'push' && github.ref == 'refs/heads/master'
        uses: arduino/actions/libraries/report-size-trends@master
        with:
          google-key-file: {{ "${{" }} secrets.GOOGLE_KEY_FILE {{ "}}" }}
          spreadsheet-id: {{ jobs["build"]["steps"]["report-size-trends"]["with"]["spreadsheet-id"] }}
{%- endif %}

      - name: Save memory usage change report as artifact
        if: github.event_name == 'pull_request'
        uses: actions/upload-artifact@v1
        with:
          name: 'size-deltas-reports'
          path: 'size-deltas-reports'
